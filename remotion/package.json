{
  "name": "poseidon-remotion",
  "version": "1.0.0",
  "private": true,
  "description": "Poseidon.AI â€” high-quality PNG stills and canonical video pipeline. Clean setup, no intermediate files from other repos.",
  "scripts": {
    "start": "remotion studio",
    "build": "remotion bundle",
    "still": "remotion still",
    "still:2x": "remotion still --scale 2",
    "remotion:slides": "node scripts/render-all-slides.mjs",
    "remotion:charts": "node scripts/render-charts.mjs",
    "video:render": "node scripts/render-video.mjs",
    "prestill:2x": "npm run copy-assets",
    "prestation:slides": "npm run copy-assets",
