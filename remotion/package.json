    "copy-assets": "node scripts/copy-assets.mjs",
    "prestart": "npm run copy-assets",
    "prestill": "npm run copy-assets",
    "build-deck": "node scripts/build-deck.mjs",
    "build-deck:quick": "node scripts/build-deck.mjs --skip-render",
    "exports:v3": "node scripts/build-v3-exports.mjs",
    "exports:v3:quick": "node scripts/build-v3-exports.mjs --skip-render",
    "check-fonts": "node scripts/check-font-sizes.mjs",
    "check-fonts:verbose": "node scripts/check-font-sizes.mjs --verbose",
    "check-tokens": "node scripts/check-layout-tokens.mjs",
    "check-overflow": "node scripts/check-overflow-gate.mjs",
    "check-debug-ids": "node scripts/check-debug-ids.mjs",
    "check-debug-ids:verbose": "node scripts/check-debug-ids.mjs --verbose",
    "slide-diff": "node scripts/gen-slide-diff.mjs",
    "slide-diff:snapshot": "node scripts/gen-slide-diff.mjs --snapshot",
    "debug:v3": "node scripts/render-debug-slides.mjs",
    "debug:v2": "node scripts/render-debug-slides.mjs --v2",
