    "pdf:v3": "node scripts/gen-v3-pdf.mjs",
    "pptx:v2": "echo 'DEPRECATED: Use npm run pptx' && exit 1",
    "pptx:v2:deprecated": "echo 'DEPRECATED: Use npm run pptx' && exit 1",
    "remotion:slides:fast": "node scripts/render-all-slides.mjs --fast",
    "remotion:slides:incremental": "node scripts/render-all-slides.mjs --incremental",
    "build-deck:incremental": "node scripts/build-deck.mjs --incremental",
    "optimize-assets": "node scripts/optimize-assets.mjs",
    "clean": "node scripts/clean-working-dirs.mjs",
    "clean:dry": "node scripts/clean-working-dirs.mjs --dry-run",
    "clean:all": "node scripts/clean-working-dirs.mjs --all",
    "verify": "node scripts/verify-pptx-pipeline.mjs",
    "verify:source": "node scripts/verify-pptx-pipeline.mjs --source",
